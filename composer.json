{
  "name": "minchao/every8d-php",
  "description": "A EVERY8D SMS SDK for PHP (Unofficial)",
  "type": "library",
  "keywords": [
    "every8d",
    "api",
    "sms",
    "sms-sdk"
  ],
  "homepage": "https://github.com/minchao/every8d-php",
  "license": "BSD-3-Clause",
  "support": {
    "issues": "https://github.com/minchao/every8d-php/issues"
  },
  "require": {
    "php": ">=7.0",
    "guzzlehttp/guzzle": "^6.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.5",
    "squizlabs/php_codesniffer": "^3.2"
  },
  "autoload": {
    "psr-4": {
      "Every8d\\": "src/Every8d"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Every8d\\Tests\\": "tests"
    }
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@test"
    ],
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit",
    "coverage": "phpunit --coverage-clover=coverage.xml"
  }
}
